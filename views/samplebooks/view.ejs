<% layout('layouts/boilerplate')%>

    <div class="container">
        <div class="col-6">
            <div class="col-5">
                <img class="card-img-top" src="https://m.media-amazon.com/images/I/41gr3r3FSWL.jpg" alt="Card image cap">
            </div>
            <div class="col-2">
                <nobr>
                    <h5>
                        Book:
                        <%= book.name %>

                    </h5>
                </nobr>
                <nobr>
                    <h6 class="text-muted">
                        <b>Author:</b>
                        <%=book.author %>
                    </h6>
                </nobr>
                <nobr>
                    <h6>Description: Lorem ipsum dolor sit amet consectetur, adipisi
                    </h6>
                </nobr>
                <nobr>
                    <h6 class="text-bold">
                        Book-price:
                        <%= book.price %>
                    </h6>
                </nobr>
                <form action="/order/<%=book._id%>" method="get"><button class="btn btn-primary">Buy now!</button>
                </form>
            </div>

        </div>
    </div>
    <br>
    <hr>
    <marquee>

        <p class="btn btn-dark">o- --- -o-- -o--- -o--o- -- --- --o- --Leave a Review Reminder Train &#128513 -- -- -o- -o-- -o--- -o---- -- --- -o-- -o--- --o---o</p>

    </marquee>
    <hr>
    <div class="container">

        <h2>Leave a Review</h2>
        <form action="/books/<%= book._id %>/review" method="POST" class="mb-3 validated-form" novalidate>

            <fieldset class="starability-basic">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <label for="first-rate1" title="Very Terrible">0 star</label>
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
            <div class="mb-3">
                <label class="form-label" for="body">Review Text</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>

        <% for(let review of book.reviews){ %>
            <div class="card mb-3 ">
                <div class="card-body">

                    <p class="starability-result" data-rating="<%=review.rating%>">
                        Rated:
                        <%= review.rating %> stars
                    </p>

                    <p class="card-text">Review:
                        <%= review.body %>
                    </p>

                </div>
            </div>
            <% } %>

    </div>