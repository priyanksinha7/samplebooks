<% layout('layouts/boilerplate')%>
    <div class="row">
        <div class="card">
            <h1 class="text-center">REQUEST-A-BOOK</h1>
            <form action="/ebooks/upload" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="description">The Book you want</label>
                    <textarea class="form-control" type="text" id="description" name="ebook[description]" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-dark">Request Ebook</button>
                </div>

            </form>
        </div>
    </div>