<% layout('layouts/boilerplate')%>

    <div class="row">
        <div class="card">
            <h1 class="text-center">Upload Book</h1>
            <div class="col-6 offset-3">
                <form action="/ebooks/upload" method="POST" novalidate class="validated-form">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="ebook[title]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="subtitle">Subtitle</label>
                        <input class="form-control" type="text" id="location" name="ebook[location]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <!--price -->
                    <div class="mb-3">
                        <label class="form-label" for="price">Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">$</span>
                            <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="ebook[price]" required>
                        </div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <!-- Image -->
                    <div class="mb-3">
                        <label class="form-label" for="image">Image URL</label>
                        <div class="input-group">

                            <input type="text" class="form-control" id="image" aria-label="image" aria-describedby="image-label" name="ebook[image]" required>
                        </div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <!-- DL URL -->
                    <div class="mb-3">
                        <label class="form-label" for="url">DOWNLOAD URL</label>
                        <div class="input-group">

                            <input type="url" class="form-control" id="url" aria-label="url" aria-describedby="url-label" name="ebook[url]" required>
                        </div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
